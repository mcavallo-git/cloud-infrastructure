#!/bin/bash
#    Docker - List Volume Maps

clear;
echo "";
echo "Docker - Listing Active Volume-Maps...";
echo "------------------------------------------------------------";
echo "";

docker inspect --format='{{println}}Image: {{.Config.Image}}{{range .Mounts}}{{println}}|{{println}}|-->  Source:  {{.Source}}  (Host){{println}}|--> Maps-To:  {{.Destination}}  (Container){{end}}' $(docker ps --quiet) | grep -v '^$';

echo "";
echo "------------------------------------------------------------";
echo "";
