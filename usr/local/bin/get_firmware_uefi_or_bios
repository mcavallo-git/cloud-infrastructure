#!/bin/sh

if [ "$(dmesg | grep -q 'EFI v' > /dev/null 2>&1; echo $?;)" == "0" ]; then
	FIRMWARE_TYPE="UEFI";
else
	FIRMWARE_TYPE="BIOS";
fi;

echo "FIRMWARE_TYPE = [ ${FIRMWARE_TYPE} ]";


# ------------------------------------------------------------
#
# Citation(s)
#
#   askubuntu.com  |  "boot - How can I tell if my system was booted as EFI/UEFI or BIOS? - Ask Ubuntu"  |  https://askubuntu.com/a/162573
#
# ------------------------------------------------------------