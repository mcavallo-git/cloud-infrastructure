#!/bin/bash
#
# LOCAL_BIN="/usr/local/bin/get_enabled_services" && echo "" > "${LOCAL_BIN}" && vi "${LOCAL_BIN}" && chmod 0755 "${LOCAL_BIN}";
#
# ------------------------------------------------------------


SYSTEMCTL_ENABLED_SERVICES=$(systemctl list-unit-files --state=enabled --no-legend;);
echo "${SYSTEMCTL_ENABLED_SERVICES}";


