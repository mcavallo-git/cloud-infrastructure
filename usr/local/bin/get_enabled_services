#!/bin/bash
#
# LOCAL_BIN="/usr/local/bin/get_enabled_services" && echo "" > "${LOCAL_BIN}" && vi "${LOCAL_BIN}" && chmod 0755 "${LOCAL_BIN}";
#
# ------------------------------------------------------------


SYSTEMCTL_RAW_OUTPUT=$(systemctl list-unit-files --state=enabled --no-legend 2> '/dev/null';);
if [ -n "${SYSTEMCTL_RAW_OUTPUT}" ]; then
	SYSTEMCTL_SERVICES=$(echo "${SYSTEMCTL_RAW_OUTPUT}" | awk '{print $1}' | sed -rne 's/^(.+)\.service$/\1/p';); echo "${SYSTEMCTL_SERVICES}";
fi;


# ------------------------------------------------------------
#
