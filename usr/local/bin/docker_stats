#!/bin/bash
# ------------------------------------------------------------
if [[ 0 -eq 1 ]]; then # RUN THIS SCRIPT REMOTELY:

curl -H 'Cache-Control: no-cache' -s "https://raw.githubusercontent.com/mcavallo-git/cloud-infrastructure/master/usr/local/bin/docker_stats?t=$(date +'%s.%N')" | bash;  # Sort by CPU usage

curl -H 'Cache-Control: no-cache' -s "https://raw.githubusercontent.com/mcavallo-git/cloud-infrastructure/master/usr/local/bin/docker_stats?t=$(date +'%s.%N')" | bash -s -- "MEM";  # Sort by Memory usage

fi;
# ------------------------------------------------------------

# Show only one sort
SHOW_ONLY="";
if [[ -n "${1}" ]]; then
  if [[ "${1,,}" == *mem* ]] || [[ "${1,,}" == *ram* ]]; then
    SHOW_ONLY="MEM";
  elif [[ "${1,,}" == *cpu* ]] || [[ "${1,,}" == *processor* ]]; then
    SHOW_ONLY="CPU";
  fi;
fi;

# Apply sorting on docker stats
while [[ 1 -eq 1 ]]; do
  STATS_UNSORTED="$(docker stats --no-stream --format "table {{.Name}}\t{{.Container}}\t{{.CPUPerc}}\t{{.MemUsage}}";)"
  STATS_CPU_SORT="$(echo "Sorting: [ CPU usage ]";echo "${STATS_UNSORTED}" | (read -r; printf "%s\n" "$REPLY"; sort -k 3 -h -r);)";
  STATS_MEM_SORT="$(echo "Sorting: [ MEM usage ]"; echo "${STATS_UNSORTED}" | (read -r; printf "%s\n" "$REPLY"; sort -k 4 -h -r);)";
  clear;
  date;
  echo "";
  if [[ "${SHOW_ONLY}" != "MEM" ]]; then
    echo "${STATS_CPU_SORT}";
  fi;
  if [[ -z "${SHOW_ONLY}" ]]; then
    echo "";
  fi;
  if [[ "${SHOW_ONLY}" != "CPU" ]]; then
    echo "${STATS_MEM_SORT}";
  fi;
done;


# ------------------------------------------------------------
#
# Citation(s)
#
#   stackoverflow.com  |  "Sort by memory usage in docker stats - Stack Overflow"  |  https://stackoverflow.com/a/43932310
#
#   unix.stackexchange.com  |  "text processing - sort but keep header line at the top - Unix & Linux Stack Exchange"  |  https://unix.stackexchange.com/a/11857
#
# ------------------------------------------------------------