#!/bin/bash
#
# LOCAL_BIN="/usr/local/bin/get_installed_packages" && echo "" > "${LOCAL_BIN}" && vi "${LOCAL_BIN}" && chmod 0755 "${LOCAL_BIN}";
#
# ------------------------------------------------------------


apt list --installed || rpm --query --all | sort 2>'/dev/null';


