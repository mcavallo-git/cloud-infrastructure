#!/bin/bash

if [ 1 -eq 1 ]; then
  read -p "Enter namespace to delete: " -t 60 <'/dev/tty';
  if [ -n "${REPLY}" ]; then
    kubectl get namespace "${REPLY}" 1>'/dev/null' 2>&1; EXIT_CODE=${?};
    if [ "${EXIT_CODE}" == 0 ]; then
      kubectl delete namespace "${REPLY}";
      kubectl create namespace "${REPLY}";
      kubectl delete namespace "${REPLY}";
    fi;
  fi;
fi;


# ------------------------------------------------------------
#
# Citation(s)
#
