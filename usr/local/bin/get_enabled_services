#!/bin/bash
#
# LOCAL_BIN="/usr/local/bin/get_enabled_services" && echo "" > "${LOCAL_BIN}" && vi "${LOCAL_BIN}" && chmod 0755 "${LOCAL_BIN}";
#
# ------------------------------------------------------------


SYSTEMCTL_ENABLEDS=$(systemctl list-unit-files --state=enabled --no-legend | awk '{print $1}' 2> '/dev/null';);
if [ -n "${SYSTEMCTL_ENABLEDS}" ]; then
	SYSTEMCTL_SERVICES=$(echo "${SYSTEMCTL_ENABLEDS}" | sed -rne 's/^(.+)\.service$/\1/p';);
	echo "${SYSTEMCTL_SERVICES}";
fi;


# ------------------------------------------------------------
#
