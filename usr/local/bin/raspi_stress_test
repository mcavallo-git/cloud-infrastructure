#!/bin/bash

if [[ -z "$(command -v stress 2>'/dev/null';)" ]]; then
  apt-get -y update;
  apt-get -y install stress;
fi;

echo "$(date +'%Y-%m-%d %H:%M:%S') | Info:  Calling [ stress --cpu ${STRESS_CPU_THREADS:-500} --timeout ${STRESS_TIMEOUT:-3600}; ]...";

stress --cpu ${STRESS_CPU_THREADS:-500} --timeout ${STRESS_TIMEOUT:-3600};


